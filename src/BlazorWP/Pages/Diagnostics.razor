@page "/diagnostics"
@inject IStringLocalizer<Diagnostics> L

<PageTitle>@L["Title"]</PageTitle>
<h3>@L["Heading"]</h3>

<table class="table">
    <thead>
        <tr><th>@L["KeyHeader"]</th><th>@L["ValueHeader"]</th></tr>
    </thead>
    <tbody>
        @foreach (var setting in _settings)
        {
            <tr>
                <td>@setting.Key</td>
                <td>@setting.Value</td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Inject]
    private IConfiguration Configuration { get; set; } = default!;

    private IEnumerable<KeyValuePair<string, string?>> _settings = Array.Empty<KeyValuePair<string, string?>>();

    protected override void OnInitialized()
    {
        _settings = Configuration.AsEnumerable().Where(kv => kv.Value != null).OrderBy(kv => kv.Key);
    }
}
