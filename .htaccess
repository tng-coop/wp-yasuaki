<IfModule mod_rewrite.c>
    RewriteEngine On

    # Don’t redirect requests for the bible itself
    RewriteCond %{REQUEST_URI} !^/bible\.html$

    # If the client’s IP is NOT 221.113.64.97…
    RewriteCond %{REMOTE_ADDR} !^221\.113\.64\.97$

    # …then send them to /bible.html
    RewriteRule ^ /bible.html [L,R=302]
</IfModule>

